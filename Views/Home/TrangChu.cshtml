@model CuoiKiLTC.ViewModels.HomeViewModel

@{
    ViewData["Title"] = "Trang Chủ";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 content-section">
            <h2>Bài Viết</h2>
            <ul class="list-group">
                @for (int i = 0; i < Model.BaiViets.Count; i++)
                {
                    <li class="list-group-item mb-3">
                        <h5>@(i + 1). @Model.BaiViets[i].TieuDe</h5>
                        @if (!string.IsNullOrEmpty(Model.BaiViets[i].HinhAnhUrl))
                        {
                            <img src="@Model.BaiViets[i].HinhAnhUrl" alt="Hình ảnh" class="img-fluid mb-2" style="max-height: 200px;" />
                        }
                        <p class="mb-1">@Model.BaiViets[i].NoiDung</p>
                        <small class="text-muted">Tác giả: @Model.BaiViets[i].TacGia</small><br />
                        <small class="text-muted">Ngày đăng: @Model.BaiViets[i].NgayDang?.ToString("dd/MM/yyyy")</small>
                    </li>
                }
            </ul>
        </div>

        <div class="col-md-6 content-section">
            <h2>Lịch Trình</h2>
            <ul class="list-group">
                @for (int i = 0; i < Model.LichTrinhs.Count; i++)
                {
                    <li class="list-group-item mb-3">
                        <h5>@(i + 1). @Model.LichTrinhs[i].TieuDe</h5>
                        <p class="mb-1">@Model.LichTrinhs[i].NoiDung</p>
                        <small class="text-muted">Ngày bắt đầu: @Model.LichTrinhs[i].NgayBatDau.ToString("dd/MM/yyyy")</small><br />
                        <small class="text-muted">Ngày kết thúc: @Model.LichTrinhs[i].NgayKetThuc.ToString("dd/MM/yyyy")</small>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>

<style>
    .list-group-item h5 {
        font-weight: bold;
        color: #333;
    }
    .list-group-item p {
        color: #555;
    }
    .list-group-item small {
        display: block;
        color: #999;
    }
     .content-section {
        margin-bottom: 20px;
    }
</style>
