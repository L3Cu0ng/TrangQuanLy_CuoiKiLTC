@model CuoiKiLTC.ViewModels.HomeViewModel

@{
    ViewData["Title"] = "Trang Chủ";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <h2>Bài Viết</h2>
            <ul class="list-group">
                @for (int i = 0; i < Model.BaiViets.Count; i++)
                {
                    <li class="list-group-item">
                        <h5>@(i + 1). @Model.BaiViets[i].TieuDe</h5>
                        <p>@Model.BaiViets[i].NoiDung</p>
                        <small>Tác giả: @Model.BaiViets[i].TacGia</small><br />
                        <small>Ngày đăng: @Model.BaiViets[i].NgayDang?.ToString("dd/MM/yyyy")</small>
                    </li>
                }
            </ul>
        </div>
        <div class="col-md-6">
            <h2>Lịch Trình</h2>
            <ul class="list-group">
                @for (int i = 0; i < Model.LichTrinhs.Count; i++)
                {
                    <li class="list-group-item">
                        <h5>@(i + 1). @Model.LichTrinhs[i].TieuDe</h5>
                        <p>@Model.LichTrinhs[i].NoiDung</p>
                        <small>Ngày bắt đầu: @Model.LichTrinhs[i].NgayBatDau.ToString("dd/MM/yyyy")</small><br />
                        <small>Ngày kết thúc: @Model.LichTrinhs[i].NgayKetThuc.ToString("dd/MM/yyyy")</small>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>
