@model IEnumerable<CuoiKiLTC.Models.NhanVien>

@{
    ViewData["Title"] = "Index";
}

<h1>Quản Lý Nhân Viên</h1>

<p>
    <a asp-action="Create">Thêm Nhân viên</a>
</p>

<div>
    <form asp-action="Index" method="get">
        <p>
            <select name="searchCategory">
                <option value="HoTen">Họ và tên</option>
                <option value="SoDienThoai">Số điện thoại</option>
                <option value="Email">Email</option>
                <option value="DiaChi">Địa chỉ</option>
                <option value="ChucVu">Chức vụ</option>
                <option value="TenPhongBan">Tên phòng ban</option>
            </select>
            <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Search" />
        </p>
    </form>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Họ và tên
            </th>
            <th>
                Số điện thoại
            </th>
            <th>
                Email
            </th>
            <th>
                Địa chỉ
            </th>
            <th>
                Ngày sinh
            </th>
            <th>
                Chức vụ
            </th>
            <th>
                Tên phòng ban
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.HoTen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoDienThoai)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiaChi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgaySinh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ChucVu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhongBan.TenPhongBan)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
